<?xml version="1.0" encoding="utf-8"?>
<manifest package="ru.mamba.test.mambatest"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.mamba.test.mambatest.LoginActivity"/>
        </activity>
        <activity
            android:name=".AlbumsActivity"
            android:label="@string/title_activity_albums"
            android:parentActivityName=".ProfileActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.mamba.test.mambatest.ProfileActivity"/>
        </activity>
        <activity
            android:name=".ContactsActivity"
            android:label="@string/title_activity_main"
            android:parentActivityName=".ProfileActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.mamba.test.mambatest.ProfileActivity"/>
        </activity>
        <activity
            android:name=".AnketaActivity"
            android:label="@string/title_activity_anketa"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".NewAlbumActivity"
            android:label="@string/title_activity_new_album"
            android:parentActivityName=".AlbumsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.mamba.test.mambatest.AlbumsActivity"/>
        </activity>
    </application>

</manifest>
